---
const menu = [
  {
    categoria: "Entradas",
    items: [
      {
        nombre: "Bruschetta",
        descripcion: "Pan tostado con tomate, ajo y albahaca fresca.",
        precio: "$95",
        imagen: "/images/1.jpg",
      },
      {
        nombre: "Empanadas artesanales",
        descripcion: "Rellenas de carne y especias tradicionales.",
        precio: "$120",
        imagen: "/images/2.jpg",
      },
       {
        nombre: "Ensalada Griega de Sandía",
        descripcion: "Sandia con penino, cebolla, aceitunas , mentas y tomate bañada en diferentes aderezos.",
        precio: "$80",
        imagen: "/images/6.jpg",
      },
    ],
  },
  {
    categoria: "Platos Fuertes",
    items: [
      {
        nombre: "Ribeye a la parrilla",
        descripcion: "Corte premium acompañado de papas rústicas.",
        precio: "$340",
        imagen: "/images/3.jpg",
      },
      {
        nombre: "Fettuccine Alfredo",
        descripcion: "Pasta cremosa con parmesano y pollo.",
        precio: "$260",
        imagen: "/images/4.jpg",
      },
      {
        nombre: "Pollo a la Naranja",
        descripcion: "Pollo bañado en salsa cremosa a la naranja.",
        precio: "$160",
        imagen: "/images/5.jpg",
      },
    ],
  },
];
---


<section id="menu" class="px-6 bg-gradient-to-b from-black/90 to-gray-900 relative overflow-hidden">

  <div class="absolute inset-0 z-0 opacity-5 bg-[url('https://img.freepik.com/vector-premium/patron-comida-deliciosa-fondo-pantalla-ilustracion-comida-sabrosa_332190-1724.jpg')]"></div>
<section  class="px-6 py-20 max-w-7xl mx-auto bg-white/5 backdrop-blur-sm rounded-3xl my-12 border border-white/10">
 
  <div class="flex flex-col items-center text-center mb-6">    
    <img data-sal="slide-up"
        data-sal-delay="400" src="https://cdn.builder.io/api/v1/image/assets%2F4967176e01a141828a5fad701f6faa79%2F4bba6c8554bd4acca47a268b72136907?width=400" alt="">   
    <p class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto mb-8 mt-8 ">
      Descubre las exquisiteces que han conquistado a nuestros comensales
    </p>
    <a
      href="/menu"
      class="inline-block bg-gray-600 hover:bg-gray-700 text-white px-8 py-3 rounded-full text-lg font-bold transition-all duration-300 transform hover:scale-105 shadow-lg shadow-red-900/30 hover:shadow-red-900/50"
    >
      Ver Menú Completo
    </a>
  </div>

  <!-- Secciones de menú -->
  {menu.map(({ categoria, items }) => (
    <div class="mb-20" data-sal="slide-up" data-sal-delay="500">
      <h3 class="text-3xl font-bold mb-10 pb-3 border-b border-red-700/30 text-white flex items-center gap-3">
        <span class="bg-red-700/20 px-4 py-1 rounded-full">{categoria}</span>
      </h3>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {items.map(({ nombre, descripcion, precio, imagen }) => (
          <article
            data-sal="zoom-out"
            class="relative group overflow-hidden rounded-2xl bg-gray-900/50 border border-white/10 hover:border-red-700/50 transition-all duration-500 hover:shadow-xl hover:shadow-red-900/10"
          >
            <!-- Imagen con efecto -->
            <div class="overflow-hidden h-64">
              <img
                src={imagen}
                alt={nombre}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition duration-700"></span>

              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
            </div>
            
            <!-- Contenido -->
            <div class="p-6 relative z-10">
              <div class="flex justify-between items-start mb-3">
                <h4 class="text-xl font-bold text-white">{nombre}</h4>
                <span class="bg-red-700 text-white px-3 py-1 rounded-full text-sm font-bold whitespace-nowrap">
                  {precio}
                </span>
              </div>
              <p class="text-white/80 mb-4">{descripcion}</p>              
              
            </div>
          </article>
        ))}
      </div>
    </div>
  ))}
</section>